@model POO.Models.Frutas
<div class="mx-auto" style="width:40%">
	<h5 style="text-align:center">Ventas Fruteria TUMTUM</h5>
	<form asp-controller="Frutas" asp-action="Index" method="post">
		<div class="form-group">
			<label>Identificación del Cliente:</label>
			<input type="text" class="form-control" name="identificacion" required />
		</div>
		<div class="form-group">
			<label>Ciudad:</label>
			<input type="text" class="form-control" name="ciudad" required />
		</div>
		<div class="form-group">
			<label>Producto:</label>
			<select class="form-control" name="producto" required>
				<option value="Piñas">Piñas</option>
				<option value="Naranjas">Naranjas</option>
				<option value="Moras">Moras</option>
				<option value="Cerezas">Cerezas</option>
				<option value="Mangos">Mangos</option>
			</select>
		</div>
		<div class="form-group">
			<label>Cantidad:</label>
			<input type="number" class="form-control" name="cantidad" required min="1" />
		</div>
		<div style="justify-content:center;display:flex">
			<button type="submit">Agregar Venta</button>
		</div>
	</form>
	@if (@Model.TotalVentas > 0)
	{
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Identificación</th>
					<th>Ciudad</th>
					<th>Producto</th>
					<th>Cantidad</th>
					<th>Precio Unitario</th>
					<th>Neto a Pagar</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var venta in Model.VentasFR)
				{
					<tr>
						<td>@venta.Identificacion</td>
						<td>@venta.Ciudad</td>
						<td>@venta.Producto</td>
						<td>@venta.Cantidad</td>
						<td>@venta.Precio.ToString("N2")</td>
						<td>@venta.Tpagar.ToString("N2")</td>
					</tr>
				}
			</tbody>
		</table>
		<p>Total de Ventas: @Model.TotalVentas.ToString("N2")</p>
	}
</div>

