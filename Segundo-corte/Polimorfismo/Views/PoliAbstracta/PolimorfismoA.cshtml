@model ModeloFigura
<div class="mx-auto" style="width:40%">
	<form asp-controller="PoliAbstracta" asp-action="PolimorfismoA" method="post">
		<fieldset class="form-group border p-3">
			<legend style="text-align:center">Polimorfismo con Clases Abstractas</legend>
			<hr />
			<div class="mb-4">
				<label for="mbase">Digite la base:</label>
				<input type="number" id="mbase" name="mbase" asp-for="mbase" required />
			</div>
			<div class="mb-4">
				<label for="altura">Digite la altura:</label>
				<input type="number" id="altura" name="altura" asp-for="altura" required />
			</div>
			<div style="justify-content:center;display:flex">
				<button type="submit">Calcular áreas</button>
			</div>
		</fieldset>
	</form>
	<fieldset style="text-align:center" class="form-group border p-3">
		<h4>@Model.areaRectangulo</h4>
		<h4>@Model.areaTrinagulo</h4>
	</fieldset>
</div>