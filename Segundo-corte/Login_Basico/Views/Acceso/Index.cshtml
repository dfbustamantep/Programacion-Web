@model Login_Basico.Models.ModeloLogin
@{
	Layout = null; // Deshabilita el uso del layout general (archivo _Layout.cshtml)
}
<head>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<div class="mx-auto" style="width:25%">
	<form asp-controller="Acceso" asp-action="Index" method="post">
		<fieldset class="form-group border p-3">
			<legend style="text-align:center">Iniciar Sesión</legend>
			<hr />
			<div class="mb-4">
				<label for="Correo" class="form-label">Correo electronico</label>
				<input type="email" class="form-control" asp-for="Correo">
			</div>
			<div class="mb-4">
				<label for="Contraseña" class="form-label">Contraseña</label>
				<input type="password" class="form-control" asp-for="Contraseña">
			</div>
			<div style="justify-content:center;display:flex">
				<button type="submit" class="btn btn-primary">Ingresar</button>
			</div>
		</fieldset>
	</form>
	@if (ViewBag.Error != null)
	{
		<div class="mb-4">
			<h4 style="color:red; text-align:center">@ViewBag.Error</h4>
		</div>
	}
</div>
