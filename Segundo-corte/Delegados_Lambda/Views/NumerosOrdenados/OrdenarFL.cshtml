<div class="mx-auto" style="widht:35%">
	<form asp-controller="NumerosOrenados" asp-action="OrdenarFL">
		<fieldset class="form-group border p-3">
			<legend style="text-align:center">Numeros Originales/Ordenados Funcion Lambda</legend><hr />
			
			<div class="mb-4">
				<label>Digite numero:</label>
				<input type="text" id="Numero" name="Numero" placeholder="Digite numero"/>
			</div>

			<div style="justify-content:center;display:flex">
				<button type="submit">Ver</button>
			</div>
		</fieldset>
	</form>

	@if(ViewBag.Originales != null)
	{
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Originales</th>
					<th>Ordenados</th>
				</tr>

				<tbody>
					<tr>
						<td>
							@foreach(int numero in @ViewBag.Originales)
							{
								<p>@numero</p>
							}
						</td>
						<td>
							@foreach(int numero in ViewBag.NumerosOrdenados)
							{
								<p>@numero</p>
							}
						</td>
					</tr>

				</tbody>
			</thead>
		</table>
	}

</div>
